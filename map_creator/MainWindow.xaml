<Window x:Class="map_creator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kreator mapy"
        Width="1200"
        Height="700"
        Background="#151515"
        WindowStartupLocation="CenterScreen">


    <Grid Background="#151515">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <!-- Pasek górny -->
            <RowDefinition Height="*"/>
            <!-- Reszta (Twoja aplikacja) -->
        </Grid.RowDefinitions>

        <!-- 🔹 Pasek górny (task bar) -->
        <Border Grid.Row="0"
            Background="#1c1c1c"
            BorderBrush="#222"
            BorderThickness="0,0,0,1"
            Height="60"
            VerticalAlignment="Top">
            <DockPanel LastChildFill="False" Margin="10,0">
                <!-- Ikona ustawień -->
                <Button x:Name="SettingsButton"
                    DockPanel.Dock="Right"
                    Width="36"
                    Height="36"
                    Margin="5,0,0,0"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    ToolTip="Ustawienia">
                    <TextBlock Text="⚙️"
                           FontSize="20"
                           Foreground="White"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
                </Button>

                <!-- Ikona konta użytkownika -->
                <Button x:Name="UserButton"
                    DockPanel.Dock="Right"
                    Width="36"
                    Height="36"
                    Margin="5,0,0,0"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    ToolTip="Konto użytkownika">
                    <TextBlock Text="👤"
                           FontSize="20"
                           Foreground="White"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
                </Button>

                <StackPanel Orientation="Horizontal"
                            DockPanel.Dock="Left"
                            VerticalAlignment="Center"
                            Margin="5,0,0,0">       
                   <Image Source="/Assets/logo.png"
                            Width="50"
                            Height="50"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            RenderOptions.BitmapScalingMode="HighQuality"/>
                        <TextBlock Text="PirateAdventure"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="#ffff"
                                   VerticalAlignment="Center"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- 🔹 Reszta aplikacji (Twój istniejący kontener) -->
        <Grid Grid.Row="1">
            <Viewbox Stretch="Uniform"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 MaxWidth="1400"
                 MaxHeight="950"
                 Margin="50">


                <!-- Karta aplikacji -->
                <Border Background="#1b1b1b"
                    CornerRadius="12"
                    BorderBrush="#222"
                    BorderThickness="1"
                    Padding="20"
                    Width="1400"
                    Height="950">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Nagłówek -->
                        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,10">
                            <Label Content="KREATOR MAPY"
                               FontSize="36"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               Margin="0,10,0,20"/>
                            <Border BorderThickness="0.5"
                                BorderBrush="#333"
                                Margin="60,0,60,10"/>
                        </StackPanel>

                        <!-- Główna zawartość -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- PANEL KAFELKÓW -->
                            <Border Grid.Column="0"
                                Background="#1f1f1f"
                                Padding="10"
                                BorderBrush="#2C2C2C"
                                BorderThickness="1"
                                CornerRadius="8"
                                MinWidth="220">
                                <DockPanel LastChildFill="True">
                                    <Label Content="🧱 Kafelki"
                                       Foreground="#639d6d"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       DockPanel.Dock="Top"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,8"/>
                                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                              HorizontalScrollBarVisibility="Disabled"
                                              Background="#262626">
                                        <StackPanel x:Name="TilesPanel"
                                                Orientation="Vertical"
                                                Margin="4"
                                                VerticalAlignment="Top"
                                                HorizontalAlignment="Center"/>
                                    </ScrollViewer>
                                </DockPanel>
                            </Border>

                            <!-- OBSZAR MAPY -->
                            <Border Grid.Column="2"
                                Background="#111"
                                BorderBrush="#333"
                                BorderThickness="2"
                                CornerRadius="6"
                                Padding="10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- Pasek narzędzi -->
                                    <StackPanel Orientation="Horizontal"
                                            Grid.Row="0"
                                            HorizontalAlignment="Center"
                                            Margin="0,0,0,10">

                                        <Label Content="Nazwa mapy:"
                                           Foreground="White"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>
                                        <TextBox x:Name="MapNameTextBox"
                                             Width="130"
                                             Text="mapa"
                                             VerticalAlignment="Center"
                                             Background="#1e1e1e"
                                             Foreground="White"
                                             BorderBrush="#444"
                                             Padding="4,2"
                                             FontSize="13"
                                             Margin="0,0,10,0"/>

                                        <Label Content="Szerokość:"
                                           Foreground="White"
                                           VerticalAlignment="Center"
                                           Margin="8,0,4,0"/>
                                        <TextBox x:Name="ColsTextBox"
                                             Width="40"
                                             Text="34"
                                             VerticalAlignment="Center"
                                             Background="#1e1e1e"
                                             Foreground="White"
                                             BorderBrush="#444"
                                             Padding="4,2"
                                             FontSize="13"
                                             Margin="0,0,10,0"/>

                                        <Label Content="Wysokość:"
                                           Foreground="White"
                                           VerticalAlignment="Center"
                                           Margin="8,0,4,0"/>
                                        <TextBox x:Name="RowsTextBox"
                                             Width="40"
                                             Text="21"
                                             VerticalAlignment="Center"
                                             Background="#1e1e1e"
                                             Foreground="White"
                                             BorderBrush="#444"
                                             Padding="4,2"
                                             FontSize="13"
                                             Margin="0,0,10,0"/>

                                        <Button x:Name="ApplySizeButton"
                                            Content="Zastosuj"
                                            Click="ApplySizeButton_Click"
                                            Background="#639d6d"
                                            Foreground="White"
                                            FontWeight="Bold"
                                            Padding="6,3"
                                            BorderThickness="0"
                                            Margin="0,0,20,0"
                                            Cursor="Hand"/>

                                        <Button x:Name="ZoomInButton"
                                            Content="🔍+"
                                            Click="ZoomInButton_Click"
                                            Background="#3b3b3b"
                                            Foreground="White"
                                            Padding="6,3"
                                            BorderThickness="0"
                                            Margin="0,0,4,0"
                                            Cursor="Hand"/>
                                        <Button x:Name="ZoomOutButton"
                                            Content="🔍-"
                                            Click="ZoomOutButton_Click"
                                            Background="#3b3b3b"
                                            Foreground="White"
                                            Padding="6,3"
                                            BorderThickness="0"
                                            Margin="0,0,10,0"
                                            Cursor="Hand"/>

                                        <Label x:Name="ZoomLabel"
                                           Content="100%"
                                           MinWidth="50"
                                           Foreground="White"
                                           VerticalAlignment="Center"
                                           FontWeight="Bold"
                                           FontSize="13"
                                           Margin="0,0,10,0"/>

                                        <Button x:Name="UndoButton"
                                            Content="↶ Cofnij"
                                            Click="UndoButton_Click"
                                            Background="#3b3b3b"
                                            Foreground="White"
                                            Padding="6,3"
                                            BorderThickness="0"
                                            Margin="0,0,4,0"
                                            Cursor="Hand"/>
                                        <Button x:Name="RedoButton"
                                            Content="↷ Przywróć"
                                            Click="RedoButton_Click"
                                            Background="#3b3b3b"
                                            Foreground="White"
                                            Padding="6,3"
                                            BorderThickness="0"
                                            Margin="0,0,10,0"
                                            Cursor="Hand"/>

                                        <Button x:Name="SaveButton"
                                            Content="💾 Zapisz"
                                            Click="SaveButton_Click"
                                            Background="#639d6d"
                                            Foreground="White"
                                            FontWeight="Bold"
                                            Padding="6,3"
                                            BorderThickness="0"
                                            Margin="4,0,0,0"
                                            Cursor="Hand"/>
                                        <Button x:Name="ClearButton"
                                            Content="🧹 Wyczyść"
                                            Click="ClearButton_Click"
                                            Background="#3b3b3b"
                                            Foreground="White"
                                            Padding="6,3"
                                            BorderThickness="0"
                                            Margin="4,0,0,0"
                                            Cursor="Hand"/>
                                    </StackPanel>

                                    <!-- Mapa (siatka) -->
                                    <ScrollViewer Grid.Row="1"
                                              Background="#111"
                                              HorizontalScrollBarVisibility="Auto"
                                              VerticalScrollBarVisibility="Auto">
                                        <Canvas x:Name="MapCanvas"
                                            Background="#111"
                                            Width="960"
                                            Height="672"
                                            MouseLeftButtonDown="MapCanvas_MouseLeftButtonDown"
                                            MouseRightButtonDown="MapCanvas_MouseRightButtonDown"
                                            MouseMove="MapCanvas_MouseMove"
                                            MouseLeftButtonUp="MapCanvas_MouseLeftButtonUp"
                                            MouseWheel="MapCanvas_MouseWheel">
                                            <Canvas.LayoutTransform>
                                                <ScaleTransform x:Name="MapScale" ScaleX="1" ScaleY="1"/>
                                            </Canvas.LayoutTransform>

                                        </Canvas>
                                    </ScrollViewer>
                                </Grid>
                            </Border>
                        </Grid>

                        <!-- Stopka -->
                        <Label Grid.Row="2"
                           Content="Kreator mapy do gry PirateAdventure"
                           Foreground="#777"
                           HorizontalAlignment="Center"
                           FontSize="15"
                           Margin="0,15,0,5"/>
                    </Grid>
                </Border>
            </Viewbox>
        </Grid>
    </Grid>
</Window>
