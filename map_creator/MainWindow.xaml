<Window x:Class="map_creator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:map_creator.ViewModels"
        xmlns:local="clr-namespace:map_creator.Utilities"
        Title="Kreator mapy"
        Width="1200"
        Height="700"
        Background="#151515"
        WindowStartupLocation="CenterScreen"
        KeyDown="Window_KeyDown">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <local:ObjectEqualsConverter x:Key="ObjectEqualsConverter"/>
        <local:StringEqualsConverter x:Key="StringEqualsConverter"/>


        <!-- Styl przycisków w pasku narzędzi kreatora -->
        <Style x:Key="EditorToolbarButton" TargetType="Button">
            <Setter Property="Background" Value="#3b3b3b"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="Margin" Value="0,0,4,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter
                                Margin="{TemplateBinding Padding}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4a4a4a"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2f2f2f"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Zielony przycisk (Zastosuj, Zapisz) -->
        <Style x:Key="EditorToolbarButtonGreen"
               TargetType="Button"
               BasedOn="{StaticResource EditorToolbarButton}">
            <Setter Property="Background" Value="#639d6d"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#6fb87a"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#558e60"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="#151515">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TOP BAR -->
        <Border Grid.Row="0"
                Background="#1c1c1c"
                BorderBrush="#222"
                BorderThickness="0,0,0,1"
                Height="60">
            <DockPanel LastChildFill="False" Margin="10,0">

                <Button DockPanel.Dock="Right"
                        Width="36"
                        Height="36"
                        Margin="5,0,0,0"
                        Background="Transparent"
                        BorderThickness="0">
                    <TextBlock Text="⚙️" FontSize="20" Foreground="White"/>
                </Button>

                <Button x:Name="UserButton"
        DockPanel.Dock="Right"
        Width="36"
        Height="36"
        Margin="5,0,0,0"
        Background="Transparent"
        BorderThickness="0"
        Click="UserButton_Click">

                    <Button.ContextMenu>
                        <ContextMenu x:Name="UserContextMenu">
                            <MenuItem Header="Wyloguj"
                      Click="LogoutMenuItem_Click"/>
                        </ContextMenu>
                    </Button.ContextMenu>

                    <TextBlock Text="👤"
               FontSize="20"
               Foreground="White"/>
                </Button>




                <StackPanel Orientation="Horizontal"
                            DockPanel.Dock="Left"
                            VerticalAlignment="Center"
                            Margin="5,0,0,0">
                    <Image Source="/Assets/logo.png"
                           Width="50"
                           Height="50"
                           Margin="0,0,10,0"/>
                    <TextBlock Text="PirateAdventure"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- 🔹 RESZTA -->
        <Grid Grid.Row="1">
            <Viewbox Stretch="Uniform"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     MaxWidth="1400"
                     MaxHeight="950"
                     Margin="50">

                <Border Background="#1b1b1b"
                        CornerRadius="12"
                        BorderBrush="#222"
                        BorderThickness="1"
                        Padding="20"
                        Width="1400"
                        Height="950">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- NAGŁÓWEK -->
                        <StackPanel Grid.Row="0" Margin="0,0,0,0">
                            <Label Content="KREATOR MAPY"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,0"/>
                            <Border BorderThickness="0.5"
                                    BorderBrush="#333"
                                    Margin="60,0,60,10"/>
                        </StackPanel>

                        <!-- GŁÓWNA ZAWARTOŚĆ -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- PANEL BOCZNY -->
                            <Border Grid.Column="0"
                                    Background="#1f1f1f"
                                    Padding="10"
                                    BorderBrush="#2C2C2C"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    MinWidth="220">

                                <DockPanel>

                                    <!-- zakładki -->
                                    <StackPanel DockPanel.Dock="Top"
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Center"
                                                Margin="0,0,0,8">

                                        <!-- KAFELKI -->
                                        <Button Content="Kafelki"
                                                Style="{StaticResource EditorToolbarButtonGreen}"
                                                Command="{Binding ShowTilesCommand}"
                                                Visibility="{Binding IsTilesMode, Converter={StaticResource BoolToVis}}"
                                                Margin="0,0,6,0"/>

                                        <Button Content="Kafelki"
                                                Style="{StaticResource EditorToolbarButton}"
                                                Command="{Binding ShowTilesCommand}"
                                                Visibility="{Binding IsObjectsMode, Converter={StaticResource BoolToVis}}"
                                                Margin="0,0,6,0"/>

                                        <!-- OBIEKTY -->
                                        <Button Content="Obiekty"
                                                Style="{StaticResource EditorToolbarButtonGreen}"
                                                Command="{Binding ShowObjectsCommand}"
                                                Visibility="{Binding IsObjectsMode, Converter={StaticResource BoolToVis}}"/>

                                        <Button Content="Obiekty"
                                                Style="{StaticResource EditorToolbarButton}"
                                                Command="{Binding ShowObjectsCommand}"
                                                Visibility="{Binding IsTilesMode, Converter={StaticResource BoolToVis}}"/>
                                    </StackPanel>

                                    <!-- KAFELKI -->
                                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                                  HorizontalScrollBarVisibility="Disabled"
                                                  Background="#262626"
                                                  CanContentScroll="False"
                                                  MinWidth="200"
                                                  Visibility="{Binding IsTilesMode, Converter={StaticResource BoolToVis}}">

                                        <ItemsControl ItemsSource="{Binding TileGroups}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>

                                                    <!-- odstęp między sekcjami 32px -->
                                                    <Border Margin="0,0,0,32">
                                                        <ItemsControl ItemsSource="{Binding}">
                                                            <ItemsControl.ItemsPanel>
                                                                <ItemsPanelTemplate>
                                                                    <UniformGrid Columns="5"/>
                                                                </ItemsPanelTemplate>
                                                            </ItemsControl.ItemsPanel>

                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <Border Width="32"
                                                                            Height="32"
                                                                            CornerRadius="4"
                                                                            Margin="2">

                                                                        <!-- podświetlenie kafelka -->
                                                                        <Border.Style>
                                                                            <Style TargetType="Border">
                                                                                <Setter Property="Background" Value="Transparent"/>
                                                                                <Setter Property="BorderThickness" Value="0"/>
                                                                                <Style.Triggers>
                                                                                    <DataTrigger Value="True">
                                                                                        <DataTrigger.Binding>
                                                                                            <MultiBinding Converter="{StaticResource ObjectEqualsConverter}">
                                                                                                <Binding/>
                                                                                                <Binding Path="DataContext.SelectedTile"
                                                                                                         RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                                                            </MultiBinding>
                                                                                        </DataTrigger.Binding>
                                                                                        <Setter Property="Background" Value="#639d6d"/>
                                                                                        <Setter Property="BorderThickness" Value="2"/>
                                                                                        <Setter Property="BorderBrush" Value="#639d6d"/>
                                                                                    </DataTrigger>
                                                                                </Style.Triggers>
                                                                            </Style>
                                                                        </Border.Style>

                                                                        <Border.InputBindings>
                                                                            <MouseBinding MouseAction="LeftClick"
                                                                                          Command="{Binding DataContext.SelectTileCommand,
                                                                                          RelativeSource={RelativeSource AncestorType=Window}}"
                                                                                          CommandParameter="{Binding}"/>
                                                                        </Border.InputBindings>

                                                                        <Image Source="{Binding Src}" Stretch="Fill"/>
                                                                    </Border>
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>
                                                    </Border>

                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>

                                    <!-- OBIEKTY -->
                                    <Border Background="#262626"
                                            Padding="10"
                                            Visibility="{Binding IsObjectsMode, Converter={StaticResource BoolToVis}}">

                                        <ScrollViewer Background="#262626"
                                                      VerticalScrollBarVisibility="Auto"
                                                      Visibility="{Binding IsObjectsMode, Converter={StaticResource BoolToVis}}">

                                            <!-- ScrollViewer musi mieć TYLKO JEDNO dziecko -->
                                            <StackPanel>

                                                <!-- LISTA SEKCJI + IKONY -->
                                                <ItemsControl ItemsSource="{Binding ObjectSections}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Margin="0,0,0,16">

                                                                <TextBlock Text="{Binding Label}"
                                                                           Foreground="#aaa"
                                                                           FontSize="13"
                                                                           Margin="0,0,0,4"/>

                                                                <Border Height="1" Background="#333" Margin="0,0,0,6"/>

                                                                <ItemsControl ItemsSource="{Binding Items}">
                                                                    <ItemsControl.ItemsPanel>
                                                                        <ItemsPanelTemplate>
                                                                            <WrapPanel/>
                                                                        </ItemsPanelTemplate>
                                                                    </ItemsControl.ItemsPanel>

                                                                    <ItemsControl.ItemTemplate>
                                                                        <DataTemplate>
                                                                            <Border Width="32"
                                                                                    Height="32"
                                                                                    Margin="2"
                                                                                    CornerRadius="4">

                                                                                <!-- podświetlenie WYBRANEGO OBIEKTU -->
                                                                                <Border.Style>
                                                                                    <Style TargetType="Border">
                                                                                        <Setter Property="Background" Value="Transparent"/>
                                                                                        <Setter Property="BorderThickness" Value="0"/>
                                                                                        <Style.Triggers>
                                                                                            <DataTrigger Value="True">
                                                                                                <DataTrigger.Binding>
                                                                                                    <MultiBinding Converter="{StaticResource ObjectEqualsConverter}">
                                                                                                        <Binding Path="Key"/>
                                                                                                        <Binding Path="DataContext.SelectedObjectKey"
                                                                                                                 RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                                                                    </MultiBinding>
                                                                                                </DataTrigger.Binding>
                                                                                                <Setter Property="Background" Value="#3a5541"/>
                                                                                                <Setter Property="BorderBrush" Value="#639d6d"/>
                                                                                                <Setter Property="BorderThickness" Value="2"/>
                                                                                            </DataTrigger>
                                                                                        </Style.Triggers>
                                                                                    </Style>
                                                                                </Border.Style>

                                                                                <Border.InputBindings>
                                                                                    <MouseBinding MouseAction="LeftClick"
                                                                                                  Command="{Binding DataContext.SelectObjectCommand,
                                                                                                  RelativeSource={RelativeSource AncestorType=Window}}"
                                                                                                  CommandParameter="{Binding}"/>
                                                                                </Border.InputBindings>

                                                                                <Image Source="{Binding IconSrc}" Stretch="Uniform"/>
                                                                            </Border>
                                                                        </DataTemplate>
                                                                    </ItemsControl.ItemTemplate>
                                                                </ItemsControl>

                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                                <!-- ================= SHARKMAN ================= -->
                                                <StackPanel Margin="0,8,0,0"
                                                            Visibility="{Binding DataContext.IsSharkmanSelected,
                                                                         RelativeSource={RelativeSource AncestorType=Window},
                                                                         Converter={StaticResource BoolToVis}}">

                                                    <TextBlock Text="Sharkman patrol distance"
                                                               Foreground="#ccc"
                                                               FontSize="13"
                                                               Margin="0,0,0,4"/>

                                                    <Slider Minimum="0"
                                                            Maximum="300"
                                                            TickFrequency="10"
                                                            IsSnapToTickEnabled="True"
                                                            Value="{Binding DataContext.DefaultSharkmanPatrolDistance,
                                                                            RelativeSource={RelativeSource AncestorType=Window}}"/>

                                                    <TextBlock Text="{Binding DataContext.DefaultSharkmanPatrolDistance,
                                                                              RelativeSource={RelativeSource AncestorType=Window},
                                                                              StringFormat='{}{0} px'}"
                                                               Foreground="#999"
                                                               FontSize="11"
                                                               HorizontalAlignment="Center"/>
                                                </StackPanel>

                                                <!-- ================= CANNON ================= -->
                                                <StackPanel Margin="0,8,0,0"
                                                            Visibility="{Binding DataContext.IsCannonSelected,
                                                                         RelativeSource={RelativeSource AncestorType=Window},
                                                                         Converter={StaticResource BoolToVis}}">

                                                    <TextBlock Text="Cannon direction"
                                                               Foreground="#ccc"
                                                               FontSize="13"
                                                               Margin="0,0,0,6"/>

                                                    <StackPanel Orientation="Horizontal"
                                                                HorizontalAlignment="Center">

                                                        <RadioButton Content="LEFT"
                                                                     GroupName="CannonDir"
                                                                     Foreground="#ccc"
                                                                     IsChecked="{Binding DataContext.CannonDirection,
                                                                                 RelativeSource={RelativeSource AncestorType=Window},
                                                                                 Converter={StaticResource StringEqualsConverter},
                                                                                 ConverterParameter=LEFT}"/>

                                                        <RadioButton Content="RIGHT"
                                                                     GroupName="CannonDir"
                                                                     Foreground="#ccc"
                                                                     IsChecked="{Binding DataContext.CannonDirection,
                                                                                 RelativeSource={RelativeSource AncestorType=Window},
                                                                                 Converter={StaticResource StringEqualsConverter},
                                                                                 ConverterParameter=RIGHT}"/>

                                                    </StackPanel>
                                                </StackPanel>

                                            </StackPanel>
                                        </ScrollViewer>
                                    </Border>

                                </DockPanel>
                            </Border>

                            <!-- OBSZAR MAPY -->
                            <Border Grid.Column="2"
                                    Background="#111"
                                    BorderBrush="#333"
                                    BorderThickness="2"
                                    CornerRadius="6"
                                    Padding="10">

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- TOOLBAR -->
                                    <StackPanel Orientation="Horizontal"
                                                Grid.Row="0"
                                                HorizontalAlignment="Center"
                                                Margin="0,0,0,10">

                                        <Label Content="Nazwa mapy:" Foreground="White"/>
                                        <TextBox Width="130"
                                                 Text="{Binding MapName}"
                                                 Background="#1e1e1e"
                                                 Foreground="White"
                                                 BorderBrush="#444"
                                                 Margin="0,0,10,0"
                                                 VerticalAlignment="Center"/>

                                        <Label Content="Szerokość:" Foreground="White"/>
                                        <TextBox Width="40"
                                                 Text="{Binding Columns}"
                                                 Background="#1e1e1e"
                                                 Foreground="White"
                                                 BorderBrush="#444"
                                                 Margin="0,0,10,0"
                                                 VerticalAlignment="Center"/>

                                        <Label Content="Wysokość:" Foreground="White"/>
                                        <TextBox Width="40"
                                                 Text="{Binding Rows}"
                                                 Background="#1e1e1e"
                                                 Foreground="White"
                                                 BorderBrush="#444"
                                                 Margin="0,0,10,0"
                                                 VerticalAlignment="Center"/>

                                        <Button Content="Zastosuj"
                                                Style="{StaticResource EditorToolbarButtonGreen}"
                                                Command="{Binding ApplySizeCommand}"
                                                Margin="0,0,20,0"/>

                                        <Button Content="🔍+"
                                                Style="{StaticResource EditorToolbarButton}"
                                                Command="{Binding ZoomInCommand}"/>

                                        <Button Content="🔍-"
                                                Style="{StaticResource EditorToolbarButton}"
                                                Command="{Binding ZoomOutCommand}"
                                                Margin="0,0,10,0"/>

                                        <Label Content="{Binding ZoomPercent}"
                                               MinWidth="50"
                                               Foreground="White"
                                               VerticalAlignment="Center"
                                               FontWeight="Bold"
                                               FontSize="13"
                                               Margin="0,0,10,0"/>

                                        <Button Content="💾 Zapisz"
                                                Style="{StaticResource EditorToolbarButtonGreen}"
                                                Command="{Binding SaveCommand}"
                                                Margin="4,0,0,0"/>

                                        <Button Content="🧹 Wyczyść"
                                                Style="{StaticResource EditorToolbarButton}"
                                                Command="{Binding ClearCommand}"
                                                Margin="4,0,0,0"/>
                                    </StackPanel>

                                    <!-- CANVAS -->
                                    <ScrollViewer Grid.Row="1"
                                                  Background="#111"
                                                  HorizontalScrollBarVisibility="Auto"
                                                  VerticalScrollBarVisibility="Auto"
                                                  CanContentScroll="False">
                                        <Canvas x:Name="MapCanvas"
                                                Background="#111"
                                                MouseLeftButtonDown="MapCanvas_MouseLeftButtonDown"
                                                MouseRightButtonDown="MapCanvas_MouseRightButtonDown"
                                                MouseMove="MapCanvas_MouseMove"
                                                MouseLeftButtonUp="MapCanvas_MouseLeftButtonUp"
                                                MouseRightButtonUp="MapCanvas_MouseRightButtonUp"
                                                MouseWheel="MapCanvas_MouseWheel">
                                            <Canvas.LayoutTransform>
                                                <ScaleTransform ScaleX="{Binding Zoom}"
                                                                ScaleY="{Binding Zoom}"/>
                                            </Canvas.LayoutTransform>
                                        </Canvas>
                                    </ScrollViewer>
                                </Grid>
                            </Border>
                        </Grid>

                        <!-- OPIS MAPY -->
                        <Border Grid.Row="2"
                                Background="#161616"
                                BorderBrush="#2C2C2C"
                                BorderThickness="1"
                                CornerRadius="0"
                                Padding="5"
                                Margin="0,5,0,0">

                            <TextBox Text="{Binding MapDescription, UpdateSourceTrigger=PropertyChanged}"
                                     Background="#1e1e1e"
                                     Foreground="White"
                                     BorderBrush="#444"
                                     Padding="8"
                                     FontSize="13"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     MinHeight="50"
                                     MaxHeight="140"
                                     VerticalScrollBarVisibility="Auto"/>
                        </Border>
                    </Grid>
                </Border>
            </Viewbox>
        </Grid>
    </Grid>
</Window>
