<Window x:Class="map_creator.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PirateAdventure — Logowanie"
        Width="1200"
        Height="700"
        Background="#151515"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#151515">
        <!-- Panel wyśrodkowany -->
        <Viewbox Stretch="Uniform"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center">

            <Border Background="#1b1b1b"
                    CornerRadius="12"
                    BorderBrush="#222"
                    BorderThickness="1"
                    Padding="40"
                    Width="600"
                    Height="500"
                    Margin="100"
                    Effect="{DynamicResource DropShadow}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Nagłówek -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,30" HorizontalAlignment="Center">
                        <Image Source="Assets/logo.png"
                               Width="100"
                               Height="100"
                               Margin="0,0,0,10"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                        <TextBlock Text="PirateAdventure"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Zaloguj się do kreatora map"
                                   FontSize="14"
                                   Foreground="#888"
                                   Margin="0,5,0,0"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Formularz -->
                    <StackPanel Grid.Row="1"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Width="320">

                        <TextBox x:Name="UsernameTextBox"
                                 Background="#252525"
                                 Foreground="White"
                                 BorderBrush="#333"
                                 BorderThickness="1"
                                 Padding="8,5"
                                 FontSize="14"
                                 Margin="0,0,0,12"
                                 ToolTip="Nazwa użytkownika"/>

                        <PasswordBox x:Name="PasswordBox"
                                     Background="#252525"
                                     Foreground="White"
                                     BorderBrush="#333"
                                     BorderThickness="1"
                                     Padding="8,5"
                                     FontSize="14"
                                     Margin="0,0,0,20"
                                     ToolTip="Hasło"/>

                        <Button Content="Zaloguj się"
                                Click="LoginButton_Click"
                                Background="#639d6d"
                                Foreground="White"
                                FontWeight="Bold"
                                BorderThickness="0"
                                Padding="10"
                                Cursor="Hand"
                                Margin="0,0,0,8"/>

                        <Button Content="Wejdź bez logowania"
                                Click="SkipLoginButton_Click"
                                Background="#333"
                                Foreground="White"
                                BorderThickness="0"
                                Padding="10"
                                Cursor="Hand"
                                Margin="0,0,0,8"/>

                        <Button Content="Zamknij"
                                Click="ExitButton_Click"
                                Background="Transparent"
                                Foreground="#888"
                                BorderThickness="0"
                                FontSize="12"
                                Cursor="Hand"
                                Margin="0,10,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Viewbox>
    </Grid>
</Window>
